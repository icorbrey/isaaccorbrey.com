---
import Section from "components/controls/Section.astro";
import NoteList from "components/notes/NoteList.astro";
import TagHeader from "./TagHeader.astro";
import type { Note } from "stores/notes";

type Props = {
  description?: string;
  notes?: Note[];
  tag: string;
};

const { description, notes = [], tag } = Astro.props;
---

<TagHeader {tag} {description} />
<Section title="Notes" link={{ text: "All notes", href: "/notes" }}>
  <NoteList highlightNew {notes} />
</Section>
