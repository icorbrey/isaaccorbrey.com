---
import NoteListPage from "../../features/notes/NoteListPage.svelte";
import { noteStore } from "../../features/notes/store";
import Root from "../../layouts/Root.astro";

const notesByYear = await noteStore.getByYear({
	includeDrafts: import.meta.env.DEV,
});
---

<Root
	description="My notes. I write whatever I want here."
	title="Notes"
	path="/notes"
>
	<NoteListPage {notesByYear} />
</Root>
